@inject LearnWebsite.Core.Services.Interfaces.IUserService _userSservice

@{
    ViewData["Title"] = "_SideBar";

    var Model = _userSservice.GetSideBar(User.Identity.Name);
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UserAvatar/@(Model.Avatar)" width="150px" height="150px">
            </div>
            <div class="detail">
                <span> @Model.UserName </span><br/>
                <span> عضویت : @Model.RegisteDate </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                    <li><a href="/UserPanel/EditProfile"> ویرایش حساب کابری </a></li>
                    <li><a href="/UserPanel/ChangePassword"> تغییر رمز عبور </a></li>
                    <li><a href="/UserPanel/CashWallet"> کیف پول </a></li>
                    <li><a href=""> تنظیمات حساب کاربری </a></li>
                    <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>

