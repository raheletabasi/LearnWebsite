                            <label>عنوان نقش</label>
                            <input type="text" asp-for="CurrentRole.RoleTitle" class="form-control">
                        </div>                        
                        <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" />
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        دسترسی نقش ها
                    </div>
                    <!-- /.panel-heading -->

                    <!-- /.panel-body -->
                </div>

            </div>

        </form>
    </div>
</div>