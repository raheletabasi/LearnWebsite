@page
@model LearnWebsite.Web.Pages.Admin.Role.IndexModel
@using LearnWebsite.Data.Entities.User;
@{

}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">مدیریت نقش ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست نقش ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2"><a href="/Admin/User/CreateUser" class="btn btn-success">افزودن نقش جدید</a></div>
                        <div class="col-md-12"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>عنوان نقش</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.roles)
                                {
                                    <tr>
                                        <td align="center">@item.RoleTitle</td>
                                        <td>
                                            <a href="/Admin/Role/EditRole/@item.RoleId" class="btn btn-warning">ویرایش</a>
                                            <a href="/Admin/Role/DeleteRole/@item.RoleId" class="btn btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>